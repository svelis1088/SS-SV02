---
- hosts: all
  gather_facts: no
  tasks:

# FS / (root FS)

  - shell: "df -h / | grep -v Filesystem|awk '{print $5}'|cut -d % -f1"
    register: rootSpace

  - name: "Chequeando FS / (root)"
    debug:
      msg: "Equipo con mas del 84% usado en el FS /  {{rootSpace.stdout}}% Usado Actualmente"
    when: "rootSpace.stdout|float > 84"

# FS /usr

  - shell: "df -h /usr | grep -v Filesystem|awk '{print $5}'|cut -d % -f1"
    register: usrSpace

  - name: "Chequeando FS /usr (root)"
    debug:
      msg: "Equipo con mas del 84% usado en el FS /usr  {{usrSpace.stdout}}% Usado Actualmente"
    when: "usrSpace.stdout|float > 84"

# FS /boot

